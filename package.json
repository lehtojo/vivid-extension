{
	"name": "vivid",
	"displayName": "Vivid",
	"description": "Vivid Languange Extension",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:vivid"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "vivid",
				"aliases": [
					"Vivid",
					"vivid"
				],
				"extensions": [
					".v"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "vivid",
				"scopeName": "source.vivid",
				"path": "./syntaxes/vivid.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "extension.hello",
				"title": "Say hello!"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.34.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.2.2"
	},
	"dependencies": {
		"net": "^1.0.2"
	}
}
